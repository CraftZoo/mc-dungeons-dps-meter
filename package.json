{
  "name": "mc-dungeons-dps-meter",
  "version": "0.1.0",
  "contributors": [
    "Sylvain DNS <sylvain.denyse@gmail.com>",
    "Netoun <coulonnier.nicolas.44@gmail.com>"
  ],
  "homepage": "./",
  "main": "public/electron.js",
  "private": true,
  "dependencies": {
    "@craco/craco": "^5.6.4",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "concurrently": "^5.2.0",
    "electron-is-dev": "^1.2.0",
    "emotion-theming": "^10.0.27",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "wait-on": "^5.0.1"
  },
  "devDependencies": {
    "babel-plugin-emotion": "^10.0.33",
    "electron": "^9.0.3",
    "electron-builder": "^22.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "prettier": "^2.0.5"
  },
  "scripts": {
    "start": "craco start",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack": "electron-builder build",
    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true
    },
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "react-app"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-trailing-spaces": "error",
      "spaced-comment": [
        "error",
        "always"
      ]
    }
  },
  "prettier": {
    "arrowParens": "avoid",
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "build": {
    "appId": "com.sun8.mc-dungeons-dps-meter",
    "productName": "Minecraft Dungeons DPS Meter",
    "copyright": "Copyright Â© 2020",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
